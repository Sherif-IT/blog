                [{ 'color': [] }], 
                            ];
        
        var quill = new Quill('#editor', {
            modules: {
                toolbar: toolbarOptions
            },
            theme: 'snow'
            });

        var form = document.querySelector('form');  
        
        function save() { 

            var cont =  document.querySelector('#article_form_contenu'); 
            cont.value = JSON.stringify(quill.getContents());
