        <div class="main-news ">
            <div class="container">
                <div class="row pt-5 mt-4">
                    <div class="col-lg-9">
                        <div class="row">
                            {% for article in articles %}
                                <div class="col-md-4">
                                    <div class="mn-img">
                                        <img src="{{ asset('uploads/post/thumbnails/' ~ article.largeHeaderImage) }}" />
                                        <div class="mn-title">
                                            <a href="blog/{{article.id}}">{{article.titre}}</a>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %} 
